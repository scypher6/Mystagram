<div   style="width: 50%; margin-left: 40%; margin-top:5%;">
  <div class="col-md-6" style="vertical-align:center; box-shadow: 1px 2px 4px rgba(0, 0, 0, .2);">
    <img src="https://entrecodigoyletras.files.wordpress.com/2016/05/instagram-logo.png?w=656" width="80%" alt="Instagram logo" />
  
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: {value: "Username or email"},
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" style="text-align: center;">
    <%= f.button :submit, "Log in", class:"button" %> 
  </div>
<% end %>
  <br />
  <div style="text-align: center;">
    Don't have an account? <%= render "devise/shared/links" %>
  </div>
  </div>
</div>