
    <!-- Navigational bar -->
<div style="text-align: center;">
    <% correct_user = User.find_by(id: params[:id]) %>
    <h1><%= correct_user.username %></h1> 
    <h6><%= correct_user.email %> <%= button_to "Follow", follower_path(correct_user.id), method: :post  %></h6> 
    <h6 style="word-spacing: 4px"><%= correct_user.pics.count.to_i %> posts &nbsp;&nbsp;&nbsp; <%= correct_user.followers.count.to_i %> Followers &nbsp;&nbsp;&nbsp; <%= correct_user.followers.count.to_i %> Following </h6>
    
    <br />
    <br />
    <!-- User's list of posts -->
    <h3>.::Posts::.</h3>
</div>

<div class="container">
    <div class="container">
    <div class="row">
      <!-- sort pictures in descending order of creation and display them -->  
      <% sorted_pics = @user.pics.order('created_at DESC') %>
        <% sorted_pics.all.each do |pic|%>
            <div class="col-sm-4 h-100 py-2 px-2">
              <div class="card card-body h-100 mt-4" >
                <%= link_to image_tag("#{pic.image.url}", alt:"#{pic.title}", width:"100%", height: "100%"), pic %>
                <!-- <div><%= link_to pic.title, pic %></div> -->
                <div style="text-align: center;">
                    ‚ù§ <%= pic.likes.count.to_i %>
                </div>
              </div>
            </div>
        <% end %> 
      </div>
    </div>
</div>


